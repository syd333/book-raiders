
<div class ="container">
<h1>Edit a review </h1>
    <% if @review.errors.any? %>
        <% @review.errors.full_messages.each do |msg| %>
            <div> <%= msg %> </div>
        <%end%> 
    <%end%>
<%= form_for @review do |f| %>
    <div class= "form-group">
    <%= f.label "Book:" %>
    <%= f.collection_select :book_id, @books, :id, :title%>
    </div>

    <div class= "form-group">
    <%= f.label :message, "Message: " %>
    <%= f.text_area :message %>
    </div>
    <fieldset class="form-group">
    <%= f.label "Rate book:"%>
    <%= f.radio_button :rating, "1" %>
    <%= f.label :rating, "1" %>
    <%= f.radio_button :rating, "2" %>
    <%= f.label :rating, "2" %>
    <%= f.radio_button :rating, "3" %>
    <%= f.label :rating, "3" %>
    <%= f.radio_button :rating, "4" %>
    <%= f.label :rating, "4" %>
    <%= f.radio_button :rating, "5" %>
    <%= f.label :rating, "5" %>
    </fieldset>
    <div class="form-group">
    <%= f.submit%>
    </div>
<%end%>
<button><%= link_to "Back", user_path(current_user)%></button>
</div>
</div>

