<h1> <%= @book.title %> </h1>

<h4>Author: <%= @book.author.name %> </h4>
<h4>Genre: <%= @book.genre.name %> </h4>

<% @book.reviews.each do |r| %>
<h4>Rating: <%= r.rating %></h4>
<%end%>
<h4>Reviews: </h4>
<ul>
<% @book.reviews.each do |r| %>
    <li><%= r.user.name %> : <%= r.message %></li>
<%end%>
</ul>


<%= link_to "Add review", new_review_path %>
<%= link_to "Back to Index", books_path%>
<%= link_to "Edit", edit_review_path(@book)%>
