<h1>New form</h1>


<%= form_tag ({controller: 'users', action: 'create', method: 'post'}) do %>
    <div>
        <%= label_tag "Name" %>
        <%= text_field_tag :name, params[:name] %>
    </div>
    <div>
        <%= label_tag "Password" %>
        <%= password_field_tag :password, params[:password] %>
    </div>
    <%= submit_tag "Create" %>
<% end %>